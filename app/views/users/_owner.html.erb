<div class="jumbotron text-center">
  <h1 class="display-4">Welcome to Coinopoly, <%= user.name %></h1>
  <p class="lead"><%= link_to 'A lot has been going on', activities_index_path %> since you last logged in.</p>
  <p class="lead">
    <a href="#" class="btn btn-lg btn-secondary">Learn more</a>
  </p>

  <div class="row">
    <div class="col-lg-4 col-sm-4 col-12">
      <div class="text-right">
        <h4><%= user.following.count %></h4>
        <span>Following</span>
      </div>
    </div>
    <div class="col-lg-4 col-sm-4 col-12">
      <div class="text-right">
        <h4><%=user.followers.count %></h4>
        <span>Followers</span>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class ="text-center">
    <% if @portfolios.blank? %>
      <%= link_to 'Create your first portfolio', new_user_portfolio_path(user) %>
    <% else %>
      <h4>Keep up with your portfolios:</h4>
      <div class ="card-group">
        <%= render @portfolios %>
      </div>
      <h4><%= link_to 'Add another portfolio', new_user_portfolio_path(user) %> </h4>
    <% end %>
    </div>
  </div>
