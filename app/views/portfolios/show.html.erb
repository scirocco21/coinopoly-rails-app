<%= @portfolio.name %>

<% @portfolio.positions.each do |position| %>
  <%= position.coin.name %>
  <%= position.quantity %>
<% end %>

<%= form_for(@position) do |f| %>
  <%= f.select 'name', options_from_collection_for_select(@coins, 'name', 'name') %>
  <%= f.number_field 'quantity' %>
  <%= f.submit 'Add a balance to your portfolio' %>
<%= end %>
