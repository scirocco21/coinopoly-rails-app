<script>
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.getJSON("/users/<%= @user.id %>/portfolios/" + nextId, function(data) {
      let portfolio = new Portfolio(data);
      portfolio.injectNameValue(this)
      let template = Handlebars.compile(document.getElementById("positions-template-owner").innerHTML);
      let result = template(portfolio.positions);
      $(".card-group").html(result);
      // re-set the id to current on the link
      $(".js-back").attr("data-id", data["id"]);
      $(".js-next").attr("data-id", data["id"]);
    });return false;
  });
});
</script>

<script>
$(function () {
  $(".js-back").on("click", function() {
    let backId = parseInt($(".js-back").attr("data-id")) -1;
    $.getJSON("/users/<%= @user.id %>/portfolios/" + backId, function(data) {
      let portfolio = new Portfolio(data);
      portfolio.injectNameValue(this)
