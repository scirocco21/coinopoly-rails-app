<h1>Sign Up to Coinopoly</h1>

<%= form_for @user do |f| %>
  <label>Name:</label><br>
  <%= f.text_field :name %><br>
  <label>Email:</label><br>
  <%= f.email_field :email %><br>
  <label>Password</label><br>
  <%= f.password_field :password %><br>
  <%= f.submit 'Signup' %>
<% end %>

<h1>Login</h1>
  <%= form_for @user, :url => signin_path do |f| %>
  <label>Name:</label><br>
  <%= f.text_field :name %><br>
  <label>Password</label><br>
  <%= f.password_field :password %><br>
  <%= f.submit 'Log In' %>
<% end %>
